@model Bookstore.ViewModel.BookAutherViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookAutherViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="bookID" class="control-label"></label>
                <input readonly asp-for="bookID" class="form-control" />
                <span asp-validation-for="bookID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" type="File" name="File" class="form-control" />
                <img src="~/uploads/@Model.ImageURL" style="width:64px" class="img-thumbnail" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <input asp-for="ImageURL" hidden class="form-control" />
            <div class="form-group">
                <label asp-for="autherID" class="control-label"></label>
                <select asp-for="autherID" class="form-control"
                        asp-items="@(new SelectList(Model.Authers, "id","Fullname"))"></select>
                <span asp-validation-for="autherID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
